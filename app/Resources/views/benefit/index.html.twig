{% extends 'base.html.twig' %}

{% block body %}
    <h1>Benefits list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for benefit in benefits %}
            <tr>
                <td><a href="{{ path('benefit_show', { 'id': benefit.id }) }}">{{ benefit.id }}</a></td>
                <td>{{ benefit.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('benefit_show', { 'id': benefit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('benefit_edit', { 'id': benefit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('benefit_new') }}">Create a new benefit</a>
        </li>
    </ul>
{% endblock %}
