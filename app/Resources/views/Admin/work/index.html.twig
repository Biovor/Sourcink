{% extends 'base.html.twig' %}

{% block body %}
    <h1>Métiers</h1>

    <table>
        <thead>
            <tr>
                <th>Nom du métier</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td>{{ work.name |striptags }}</td>
                <td>{{ work.category |striptags }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('work_edit', { 'id': work.id }) }}"class="btn-floating btn-small waves-effect waves-light green"><i class="material-icons">mode_edit</i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('work_new') }}" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
        </li>
    </ul>
{% endblock %}
