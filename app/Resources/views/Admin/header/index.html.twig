{% extends "base.html.twig" %}

{% block body %}
    <h1>Headers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Video</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for header in headers %}
            <tr>
                <td><a href="{{ path('header_show', { 'id': header.id }) }}">{{ header.id }}</a></td>
                <td>{{ header.title }}</td>
                <td>{{ header.text }}</td>
                <td>
                {% if header.picture is not null %}
                    {{ asset('img/' ~ header.picture.pictureName) }}
                {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('header_show', { 'id': header.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('header_edit', { 'id': header.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('header_new') }}">Create a new header</a>
        </li>
    </ul>
{% endblock %}
