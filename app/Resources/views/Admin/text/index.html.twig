{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des texts</h1>

    <table>
        <thead>
            <tr>
                <th>Location</th>
                <th>Title</th>
                <th>Contents</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text in texts %}
            <tr>
                <td>{{ text.location }}</td>
                <td>{{ text.title }}</td>
                <td>{{ text.contents }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_text_show', { 'id': text.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_text_edit', { 'id': text.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_text_new') }}">Create a new text</a>
        </li>
    </ul>
{% endblock %}
