{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des texts</h1>

    <table>
        <thead>
            <tr>
                <th>Location</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text in texts %}
            <tr>
                <td>{{ text.location }}</td>
                <td>{{ text.title }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_text_edit', { 'id': text.id }) }}" class="btn-floating btn-small waves-effect waves-light green"><i class="material-icons">mode_edit</i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('admin_text_new') }}" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
        </li>
    </ul>
{% endblock %}
