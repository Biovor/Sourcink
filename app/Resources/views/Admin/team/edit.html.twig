{% extends "base.html.twig" %}

{% block body %}

    <h1>
        Modifier un collaborateur
        <a href="{{ path('team_index') }}" class="btn btn-flat orange-text right">Revenir à la liste</a>
    </h1>

    {{ form_start(form) }}
    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
    {{ form_errors(form.name) }}

    {{ form_label(form.text) }}
    {{ form_widget(form.text) }}
    {{ form_errors(form.text) }}

    {{ form_label(form.linkedin) }}
    {{ form_widget(form.linkedin) }}
    {{ form_errors(form.linkedin) }}

    <div class="file-field input-field">
        <p>L'image doit être en format portrait, la taille optimal est de 196x233 %</p>
        <div class="btn orange">
            <span>Choisissez une image</span>
            {{ form_widget(form.picture.pictureFile) }}
        </div>
        <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
        </div>
        {{ form_errors(form.picture.pictureFile) }}
    </div>
    <div><img src="{{ vich_uploader_asset(team.picture, 'pictureFile') }}" class="admimageTeam circle"  /></div>
    {{ form_label(form.picture.alt) }}
    {{ form_widget(form.picture.alt) }}
    {{ form_errors(form.picture.alt) }}

    {{ form_widget(form.submit) }}
    {{ form_end(form) }}

    {{ form_start(delete_form) }}
    <button class="btn red right" name="action" type="submit">Supprimer</button>
    {{ form_end(delete_form) }}
{% endblock %}
