{% extends "base.html.twig" %}


{% block body %}
    <h1>Expertises</h1>

    <table class="highlight">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expertise in expertises %}
            <tr>
                <td><a href="{{ path('expertise_show', { 'id': expertise.id }) }}">{{ expertise.id }}</a></td>
                <td>{{ expertise.text | raw}}</td>
                <td>{{ expertise.title | raw}}</td>
                <td>
                    <ul>

                        <li>
                            <a href="{{ path('expertise_show', { 'id': expertise.id }) }}" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">menu</i></a>
                        </li>
                        <li>
                            <a href="{{ path('expertise_edit', { 'id': expertise.id }) }}" class="btn-floating btn-small waves-effect waves-light green"><i class="material-icons">mode_edit</i></a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('expertise_new') }}" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
        </li>
    </ul>
{% endblock %}
