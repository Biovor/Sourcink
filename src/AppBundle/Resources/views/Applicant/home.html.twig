{% extends "AppBundle:Base:layout.html.twig" %}
{% block header %}
    {% include('AppBundle:Applicant:header.html.twig') %}
{% endblock %}
{% block content %}
    <div class="container">
        <h1 class="profil-name">
            Bonjour {{ app.user.firstname }} {{ app.user.lastname }}
            {% if status==1 %}
                <a href="{{ path('applicant_update') }}" class="btn btn-flat orange-text right">Mettre à jour mon
                    profil</a>
            {% endif %}
        </h1>
        {% if status==1 %}
            {% if hasResume == false %}
                <div class="card-panel">
                    <p>Pour pouvoir postuler à nos offres d'emplois, il ne vous reste plus qu'à nous faire parvenir
                        votre CV</p>
                    <div class="center">
                        <a class="btn blue" href="#modalcv">Envoyer mon CV</a>
                    </div>
                </div>
            {% endif %}
            <p>Adresse e-mail : {{ app.user.email }}</p>
            <p>Titre : {{ app.user.title }}</p>
            <p>Numéro de téléphone : {{ app.user.phone }}</p>
            <p>Emploi actuel : {{ app.user.currentJob }}</p>
            <p>Emploi recherché : {{ app.user.wantedJob }}</p>
            <p>Mobilité Géographique : {{ app.user.mobility }}</p>
            <p>Expérience : {{ app.user.experience }}</p>
            <p>Salaire Actuel : {{ app.user.salary }}</p>
            <p>Salaire Souhaité : {{ app.user.wantedSalary }}</p>
            <p>Salaire Souhaité : {{ app.user.wantedSalary }}</p>
        {% else %}
        <div class="card-panel">
            <p>Pour pouvoir postuler à nos offres d'emplois, vous devez tout à d'abord compléter votre profil</p>
            <div class="center">
                <a href="{{ path('applicant_update') }}" class="btn blue">Compléter mon profil</a>
            </div>
        </div>
        {% endif %}
    </div>
    <div id="modalcv" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>Envoyer mon CV</h4>
            <p>
            <form id="sendResumeForm">
                <div class="file-field input-field">
                    <div class="btn blue">
                        <span>CV</span>
                        <input type="file" id="sendResumeFile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                    <button class="btn-large red right" id="sendResumeButton">Envoyer</button>
                </div>
            </form>
            <div id="status">

            </div>
            </p>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Terminer</a>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('select').material_select();
        });
        $('#sendResumeButton').on('click', function (e) {
            event.preventDefault();
            var resume = $('#sendResumeFile').val();
            var formData = new FormData();
            formData.append('resume', $('input[type=file]')[0].files[0]);
            $.ajax({
                url: '/ajax/resume/send',
                type: 'POST',
                dataType: 'json',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    $('#status').html('Votre CV a bien été envoyé');
                },
                error: function () {
                    $('#status').html('Une erreur a eu lieu');
                }
            });
        });
    </script>
{% endblock %}
