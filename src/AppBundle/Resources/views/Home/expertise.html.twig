<div class="hide-on-med-and-down">
    <div class="container">
        <h2 class="center" id="expertise">{{ sourcink.title | raw  }}</h2>
        <div class="row center">
            <div class="col s12">
                <p class="expertise-texte center">
                    {{ sourcink.text1 | raw  }}
                </p>
            </div>

        </div>
        <p class="work-name-title">{{ sourcink.text2 | raw  }}</p>
    </div>
    <div class="row center">
        {% for category in categories %}
            <div class="col s6 center">
                {% if category.isPremium == false %}

                    {% for work in category.works %}
                        <p class="center work-name">{{ work.name }}</p>
                    {% endfor %}
                    <img class="work img-fleche" src="{{ asset('media/fleche.png') }}">
                {% endif %}
            </div>
            <div class="col s6 center">
                {% if category.isPremium == true %}

                    {% for work in category.works %}
                        <p class="center work-name">{{ work.name }}</p>
                    {% endfor %}
                    <img class="work img-fleche" src="{{ asset('media/fleche.png') }}">
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>