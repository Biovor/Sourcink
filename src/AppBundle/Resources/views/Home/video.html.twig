{% if browser == 'Edge' %}

    <div class="slider">
        <ul class="slides">
            {% for photo in photos %}
                <li>
                    <img src="{{ asset('img/'~photo.picture.pictureName) }}">
                    <div class="caption center-align">

                        <h2><a href="{{ photo.url }}">{{ photo.title |raw }}</a></h2>
                        <h4>{{ photo.text | raw }}</h4>

                        <a href="{{ photo.url }}" class="btn blue">{{ photo.nameUrl }}</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

{% else %}
    <div class="video-container video-responsive hide-on-small-only hide-on-med-only">
        <div class="slider fullscreen video-responsive">
            <ul class="slides">
                {% for video in videos %}
                    <li>
                        <video autoplay muted loop>
                            <source src="{{ asset('img/'~video.picture.pictureName) }}" type="video/mp4">
                        </video> <!-- random image -->
                        <div class="caption center-align">

                            <h2><a href="{{ video.url }}">{{ video.title |raw }}</a></h2>
                            <h4>{{ video.text | raw }}</h4>

                            <a href="{{ video.url }}" class="btn blue">{{ video.nameUrl }}</a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}





