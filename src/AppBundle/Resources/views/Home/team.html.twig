<h2 class="center" id="team">Notre Equipe</h2>
<div class="row center-align">
    {% for person in team %}
        <div class="col l6 s4">
            <img class="team-img circle" src="{{ asset('img/'~person.picture.pictureName) }}">
            <ul class="collapsible popout" data-collapsible="accordion">
                <li>
                    <div class="collapsible-header ">{{ person.name }}</div>
                    <div class="collapsible-body"><span>{{ person.text }}</span></div>
                </li>
            </ul>
            <a class="btn btn-block halfway-fab waves-effect waves-light blue"
               href="{{ person.linkedin }}"><i class="fa fa-linkedin"></i>
            </a>
        </div>
    {% endfor %}
</div>