{% extends '::layout.html.twig' %}
{% block header %}
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper">
                <a href="{{ path('app_homepage') }}" class="brand-logo">
                    <img src="{{ asset('media/logoSourcInk.svg') }}">
                </a>
                <p class="slogan center hide-on-med-and-down">
                    L'agence de sourcing spécialisée en recrutement juridique, fiscal et RH
                </p>
                <a href="{{ path('app_homepage') }}" class="btn red right">Retour à l'accueil</a>
            </div>
        </nav>
    </div>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="flash-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            {% if error.message is defined %}
                <div>
                    <p class="red-text">{{ error.message }}</p>
                </div>
            {% endif %}
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </div>
{% endblock %}
