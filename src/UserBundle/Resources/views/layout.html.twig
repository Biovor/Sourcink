{% extends '::layout.html.twig' %}
{% block header %}
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper">
                <a href="{{ path('app_homepage') }}" class="hide-on-large-only" >
                    <img src="{{ asset('media/logo-home-70.png') }}" class="logoHome">
                </a>
                <a href="{{ path('app_homepage') }}" class="brand-logo">
                    <img src="{{ asset('media/logoSourcInk.svg') }}">
                </a>
                <p class="slogan center hide-on-med-and-down">
                    L'agence de sourcing spécialisée en recrutement juridique, fiscal et RH
                </p>
                <a href="{{ path('app_homepage') }}" class="right hide-on-med-and-down red white-text applicant-button waves-effect
                z-depth-1">Retour à l'accueil</a>

            </div>
        </nav>
    </div>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            {% if error.message is defined %}
                {% if error.message == 'Bad credentials.' %}
                    <p class="red-text">Identifiant incorrect</p>
                {% elseif error.message == 'User account is disabled.' %}
                    <p class="red-text">Ce compte utilisateur est désactivé.</p>
                {% else %}
                    <div>
                        <p class="red-text">{{ error.message }}</p>
                    </div>
                {% endif %}
            {% endif %}
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </div>
{% endblock %}
