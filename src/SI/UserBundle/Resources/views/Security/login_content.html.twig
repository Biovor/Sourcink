
{% block title %}Connexion{% endblock %}
{% block body %}
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center">Login</a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            {% if error %}
                <div class="chip red">
                    <span class="white-text">{{ error.message }}</span>
                </div>
            {% endif %}
            <form action="{{ path('fos_user_security_check') }}" method="post" class="col s12">
                <div class="row">
                    <div class="input-field">
                        <label for="username" class="active">Username</label>
                        <input type="text" id="username" name="_username" placeholder="Type your username" class="validate">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <label for="username" class="active">Password</label>
                        <input type="password" id="password" name="_password" placeholder="Type your password" class="validate">
                    </div>
                </div>
                <input type="submit" value="Login" class="btn-large">
                <p><a href="{{ path('fos_user_registration_register') }}">Not register yet ? Register instead</a></p>
            </form>
        </div>
    </div>
{% endblock body %}